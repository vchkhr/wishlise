<%= turbo_frame_tag @wishlist, data: { controller: "turbo-form-redirect" } do %>
  <div class="px-3">
    <h1 class="text-center mt-5"><%= @wishlist.title %></h1>

    <% if current_user == @wishlist.user %>
      <p class="text-center mb-0">
        <i class="fs-75 <%= WishlistsHelper::PUBLICITY_ICONS[@wishlist.publicity.to_sym] %>"></i>
        <%= WishlistsHelper::PUBLICITY_TITLES[@wishlist.publicity.to_sym] %><br>
      </p>

      <div class="d-flex justify-content-center align-items-center gap-3">
        <%= link_to "Edit this wishlist", edit_wishlist_path(@wishlist), data: { turbo_frame: "_top" } %>
        <%= button_to "Delete", @wishlist, method: :delete, class: "btn btn-link text-danger" %>
      </div>

      <div class="text-center mt-2">
        <%= link_to new_item_path(wishlist_id: @wishlist), data: { turbo_frame: "_top" }, class: "btn btn-outline-success" do |link| %>
          <i class="bi bi-plus-circle-dotted"></i> Add new item
        <% end %>
      </div>
    <% else %>
      <p class="text-center">
        Wishlist by

        <%= link_to profile_path(@wishlist.user.profile), class: "text-decoration-none" do |link| %>
          <%= render partial: "profiles/avatar", locals: { profile: @wishlist.user.profile, html_class: "avatar" } %>
          <%= @wishlist.user.profile.display_name %>
        <% end %>
      </p>
    <% end %>

    <% if @wishlist.items.empty? %>
      <h6 class="text-center mt-5">This wishlist has no items yet.</h6>
    <% else %>
      <div id="items" class="row row-cols-1 row-cols-md-3 g-4 mt-3">
        <% @wishlist.items.order(updated_at: :desc).each do |item| %>
          <div id="<%= dom_id item %>" class="col">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title">
                  <%= link_to item.title || item.url, item_path(item), class: "text-decoration-none", data: { turbo_frame: "_top" } %>
                </h5>

                <p class="card-text">
                  <small class="text-muted">
                    <% if item.url.present? %>
                      External URL: <%= link_to "#{URI.parse(item.url).host} <i class='bi bi-box-arrow-up-right'></i>".html_safe, item.url, class: "text-decoration-none", target: "_blank" %><br>
                    <% end %>

                    <% if item.price.present? %>
                      Listed price: <%= item.price %>.<br>
                    <% end %>

                    <% if item.description.present? %>
                      Description: <%= item.description %><%= "." if item.description[-1] != "." %><br>
                    <% end %>

                    Last updated <%= time_ago_in_words(item.updated_at) %> ago.
                  </small>
                </p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
