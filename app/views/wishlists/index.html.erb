<div class="px-3">
  <h1 class="text-center mt-5">Your Wishlists &#10024;</h1>

  <div class="text-center mt-0">
    <p>
      <%= link_to "New wishlist", new_wishlist_path %>
    </p>
  </div>

  <div id="wishlists" class="row row-cols-1 row-cols-md-3 g-4">
    <% @wishlists.each do |wishlist| %>
      <%= render wishlist %>
    <% end %>
  </div>
</div>
