<h1 class="text-center"><%= image_tag "page-with-curl.png", alt: "", class:"mb-4" %> <%= current_user.profile.first_name %>, here are your wish lists</h1>

<div class="album py-5">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @lists.each do |list| %>
        <div class="col">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= get_emoji_cd(list.emoji) %> <%= link_to list.title, list, class: "card-link" %></h5>

              <h6 class="card-subtitle mb-2 text-muted"></h6>
              <p class="card-text"></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
