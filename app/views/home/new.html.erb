<% if current_user %>
  <div class="m-3 mt-5 text-center">
    <p>You are signed in as <%= current_user.email %>.</p>
  </div>
<% else %>
  <div class="m-3 mt-5 text-center">
    <h1>Welcome to Wishlise! &#10024;</h1>

    <p>You can <%= link_to "create an account", new_user_registration_path %> or <%= link_to "log in", new_user_session_path %>.</p>
  </div>
<% end %>
